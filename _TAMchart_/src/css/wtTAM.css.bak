
/* ######################### General ######################### */

* {
    margin: 0;
    border: 0;
    padding: 0;
}

body {
    color: #222;
    font-family: Arial, Helvetica, sans-serif;
    overflow: hidden;
}


/* ######################### SVG Canvas ######################### */

#canvas {
    margin-left: 200px;
    height: 100%;
    vertical-align: top;
    overflow: hidden;
}

#sTAM {
    display: none;
    width: 100%;
    height: 100%;
}

#sTFM {
    width: 100%;
    height: 100%;
}

#Htree {
    display: none;
    width: 100%;
    height: 100%;
}

#bullsEye {
    display: none;
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    vertical-align: top;
    z-index: -1;
}

